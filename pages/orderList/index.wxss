/* pages/orderList/index.wxss */
@import "./index.skeleton.wxss";
/* 日期 */
.calendar {
  width: 100rpx;
  height: 100rpx;
}

.con {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  /* flex-direction: row-reverse; */
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 20rpx;
  align-items: center;
  /* background-image: linear-gradient(90deg, #f8f8f8, #f1f1f1); */
}
.picker{
  color: #6CD76A;
}
.priceNumber {
  height: 100%;
  line-height: 80rpx;
  margin-top: 6rpx;
  margin-left: 20rpx;
}

.con .orderDate {
  width: 250rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  border: 1px solid #c9c9c9;
  border-radius: 30rpx;
  background: #f8f8f8;
}

.con .orderDate picker {
  width: 180rpx;
  height: 100%;
  float: left;
  padding-left: 25rpx;
}

.con .orderDate .pickerImg {
  float: right;
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
}

.pickerImg-on{
  transform: rotateX(180deg);
}

.iconNone {
  display: none;
}

/* pages/orderList/index.wxss */
.orderListWrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 14rpx;
}

.orderList {
  width: 100%;
  height: 372rpx;
  border-radius: 30rpx;
  background-color: #fff;
  margin-top: 30rpx;
  padding: 10rpx 17rpx;
  box-shadow: 5px 5px 2px #ddd;
}

.orderList:first-child {
  margin-top: 10rpx;
}

.equipment {
  width: 100%;
  height: 36%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 14rpx 0;
  position: relative;
}

.equipment-item {
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.equipment-item image {
  width: 28rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.equipment-item-name {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.order-status {
  position: absolute;
  top: -4rpx;
  right: 0;
  color: #6CD76A;
  display: flex;
  align-items: center;
}

.order-status image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 6rpx;
}

.order-status .off_line {
  color: #ff6106;
}

.shopWrap {
  width: 100%;
  height: 64%;
  display: flex;
  align-items: center;
}

.shop-img {
  display: flex;
}

.shop-img image {
  width: 140rpx;
  height: 200rpx;
  margin-right: 10rpx;
}

.omit,
.goods-price {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 36rpx;
}

.goods-price {
  height: 100%;
  justify-content: flex-end;
  margin-left: auto;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.number {
  font-size: 28rpx;
  margin: 10rpx 0;
  font-weight: 500;
}

