/* component/ball/index.wxss */
/* 悬浮球 */
.refresh {
  width: 90rpx;
  height: 90rpx;
  position: fixed;
  z-index: 100000;
  border-radius: 50%;
  background: #535681;
  display: flex;
  justify-content: center;
  align-items: center;
}

.imgWrap{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #535681;
  border-radius: 50%;
}

.refresh .bindImg {
  width: 50rpx;
  height: 50rpx;
  background-color: transparent;
  z-index: 1;
}

.refresh .ball{
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  background: rgb(80, 146, 13);
  border-radius: 50%;
  color: #fff;
  font-weight: bold;
  text-align: center;
  line-height: 70rpx;
  opacity: 1;
  z-index: -1;
}