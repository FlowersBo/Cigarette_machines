/* component/ball/index.wxss */
/* 悬浮球 */
.refresh {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  z-index: 100000;
  border-radius: 50%;
  /* background: #535681; */
  display: flex;
  justify-content: center;
  align-items: center;
}

.imgWrap{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-image: radial-gradient(#fff 30%, rgb(161, 161, 161) 40%,rgb(78, 78, 78) 60%, rgb(65, 65, 65) 80%, rgb(65, 65, 65) 100%);
  opacity: .5;
}

