} */

.refresh .bindImg {
  width: 50rpx;
  height: 50rpx;
  background-color: transparent;
  z-index: 1;
}

.refresh .ball{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  background: rgb(80, 146, 13);
  border-radius: 50%;
  color: #fff;
  font-weight: bold;
  text-align: center;
  line-height: 80rpx;
  opacity: 0;
  z-index: -1;
}